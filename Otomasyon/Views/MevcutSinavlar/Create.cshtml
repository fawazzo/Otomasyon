@model Otomasyon.Core.Entities.MevcutSinavlar

@{
    ViewData["Title"] = "Create";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <!-- Logout Button in the header -->
                <button type="button" class="btn btn-danger btn-sm float-right" id="headerLogoutButton">Logout</button>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Create MevcutSinavlar</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Create">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="SinavAdi" class="control-label"></label>
                                <input asp-for="SinavAdi" class="form-control" />
                                <span asp-validation-for="SinavAdi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="dateStart" class="control-label"></label>
                                <input asp-for="dateStart" type="date" class="form-control" />
                                <span asp-validation-for="dateStart" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="dateEnd" class="control-label"></label>
                                <input asp-for="dateEnd" type="date" class="form-control" />
                                <span asp-validation-for="dateEnd" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SinavTarihi" class="control-label"></label>
                                <input asp-for="SinavTarihi" type="date" class="form-control" />
                                <span asp-validation-for="SinavTarihi" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="button-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .button-group {
        display: flex;
        gap: 10px; /* Space between buttons */
    }

    .btn-sm {
        font-size: 0.875rem; /* Smaller font size for buttons */
    }

    #headerLogoutButton {
        margin-left: 10px; /* Space between logout and title */
    }
</style>
