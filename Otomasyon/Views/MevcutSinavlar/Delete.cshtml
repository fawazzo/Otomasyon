@model Otomasyon.Core.Entities.MevcutSinavlar

@{
    ViewData["Title"] = "Delete Mevcut Sınav";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title">Delete Mevcut Sınav</h3>
        </div>
        <div class="card-body">
            <h4>Are you sure you want to delete this?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SinavAdi)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SinavAdi)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.dateStart)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.dateStart)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.dateEnd)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.dateEnd)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SinavTarihi)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SinavTarihi)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
