@model Otomasyon.Core.Entities.Kisiler

@{
    ViewData["Title"] = "Kişiyi Sil";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title">Kişiyi Sil</h3>
        </div>
        <div class="card-body">
            <h5 class="card-text">@Model.Adi @Model.Soyadi'yi silmek istediğinizden emin misiniz?</h5>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-danger">Sil</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Geri</a>
                </div>
            </form>
        </div>
    </div>
</div>
