@model Otomasyon.Core.Entities.BasvuruFormu

@{
    ViewData["Title"] = "Create BasvuruFormu";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Create BasvuruFormu</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Create" id="createForm">
                        <div class="card-body">
                            <!-- Hidden fields for TcKimlikNumarasi, Adi, Soyadi, Unvan -->
                            <input type="hidden" asp-for="TcKimlikNumarasi" />
                            <input type="hidden" asp-for="Adi" />
                            <input type="hidden" asp-for="Soyadi" />
                            <input type="hidden" asp-for="Unvan" />

                            <div class="form-group">
                                <label asp-for="MevcutSinavId" class="control-label">Sınavlar</label>
                                <select asp-for="MevcutSinavId" class="form-control" asp-items="ViewBag.AvailableSinavlar">
                                    <option value="">Sınav Seç</option>
                                </select>
                                <span asp-validation-for="MevcutSinavId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Gorev" class="control-label"></label>
                                <select asp-for="Gorev" class="form-control" asp-items="ViewBag.AvailableRoles">
                                    <option value="">Görevi Seç</option>
                                </select>
                                <span asp-validation-for="Gorev" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="button-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>
                        <!-- Durumum Button -->
                        <a href="@Url.Action("Durum", "BasvuruFormu")" class="btn btn-secondary">Durumum</a>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

<style>
    .card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .button-group {
        display: flex;
        gap: 10px; /* Space between buttons */
    }

    .btn-sm {
        font-size: 0.875rem; /* Smaller font size for the Logout button */
    }
</style>
