@model IEnumerable<Otomasyon.Core.Entities.BasvuruFormu>
@using Otomasyon.Core.Entities

@{
    ViewData["Title"] = "Başvuru Formu Listesi";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Başvuru Formu Listesi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Başvuru Formu Listesi</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başvuru Formları</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-primary">Yeni Başvuru Formu Ekle</a>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Unvan</th>
                            <th>İsim</th>
                            <th>Soyad</th>
                            <th>TC Kimlik</th>
                            <th>Sınav İsmi</th>
                            <th>Görevi</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Unvan</td>
                                <td>@item.Adi</td>
                                <td>@item.Soyadi</td>
                                <td>@item.TcKimlikNumarasi</td>
                                <td>@item.MevcutSinav?.SinavAdi</td>
                                <td>@item.Gorev</td>
                                <td>@item.Degerlendirme</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Görüntüle</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                                 
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <!-- Footer content if needed -->
            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
